<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/belief_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Beliefs</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
<div class="center hero-unit">
   <%= link_to image_tag("bike.jpeg", alt: "Bike"), root_path %>
  <h1>Welcome to 100 Beliefs</h1>
  <p>Start making a list of your beliefs... </p>
  <%= link_to "Sign up", signup_path, class: "btn btn-large btn-primary" %>
 </div>
 <% end %> 